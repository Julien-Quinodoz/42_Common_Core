#### Pour installer SIEGE : instal -->
cd /tmp
curl -L https://download.joedog.org/siege/siege-latest.tar.gz -o siege.tar.gz
ls -lh siege.tar.gz

tar -xzf siege.tar.gz
cd siege-*
./configure --prefix=$HOME/.local
make
make install

~/.local/bin/siege --version

